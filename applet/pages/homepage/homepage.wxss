/* pages/homepage/homepage.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 2%;
  width: 40%
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 5px;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
}
.usermotto {
  margin-top: 10px;
}
.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
}
.userflag{
  font-size: 12px;
  font-weight: 400;
}
.pagetop{
  height: 30%;
  margin: 2%;
  background-color:rgba(0, 128, 255, 0.7);
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
}
.top-right{
  width: 23px;
  height: 23px;
  border-radius: 15px;
  margin-right: 5px;
}
.right-box{
  display: flex;
  align-self: center;
  align-content: center;
  align-items: center;
  /* justify-content: space-between; */
  margin-right: 5%;
}
.weui-cell_access{
  background-color: rgba(0, 128, 255, 0.7);
  margin: 2%;
  padding: 0px 16px 0px 0px;
  border-radius: 15px;
}
.page{
  position: absolute; /* 使用绝对定位 */
  top: 0; /* 距离上边距：0px */
  left: 0%; /* 距离左边距：25% */
  width: 100%; /* 右侧主盒子所占宽度 */
  height: 100%; /* 右侧主盒子所占高度 */
  padding: 10px; /* 所有 4 个内边距都是 10px*/
  box-sizing: border-box; /* 为元素指定的任何内边距和边框都将在已设定的宽度和高度内进行绘制*/
  background: #fff; /* 右侧主盒子背景颜色 */
}
.weui-cell_primary{
  font-size: 16px;
  color:#fff;
  font-weight: 600;
}
.unauth{
  text-align: center;
  margin: 10% 0px;
}
.page__bd{
  padding-bottom: 5%;
}
.xxx{
  color: #efefef;
}