.slide-image {
  width: 100%;
  height: 150px;
  color: #fff
}
.warn-icon{
  margin-right: 5px;
}
.notice{
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 20px;
}
.notice-img{
  margin: 0px 1% 0px 1%;
  width:45px;
  height:15px;
}
.tab-right {
  width: 100%;
  height: 100%;
}

.content-item {
  height: 100%;
  width: 90%;
  display: flex;
  align-items: center;
}
.victim{  /*受害者滚动记录*/
  height: 100%;
  font-size: 10px;
  line-height: 23px;
  color: rgb(70, 180, 220);
}
.swiper-item{
  /* width: 100%; */
  padding: 0 5%;
  height: 100%;
  width: 100%;
}
/*广告以下*/
.panel__hd{
  margin: 3% 0px 3% 3%;
  /* padding-left: 3%; */
  height: 16x;
  font-weight: 600;
  font-size: 16px;
  background-color: #f5f5f5;
}
.panel__bd{
  background-color: white;
  margin: 0px auto;
  width: 94%;
  border-radius: 5px;
}
.title{
  padding-left: 3%;
  border-left: 5px solid #3385ff;
}
.temp{
  display: flex;
  height: 120px;
}

/*中部应用*/
.app_list{
  margin-bottom: 3%;
}
.appImg{
  width: 120px;
  height: 120px;
  border-radius: 20px;
  left: 0px;
}
.appContent{
  width: 70%;
  margin: 3%;
  display: flex;
  flex-direction: column;
}
.rightAppContent{
  text-align:right
}
.one{
  margin: 5px 0 0 5px;
  font-size: 18px;
  color: #87CEFA;
  font-weight: 800;
}
.two{
  margin-top: 10px;
  font-size: 16px;
  color:#87CEFA;
}
.right-one{
  color: coral;
  margin-right: 5px;
}
.right-two{
  color: coral;
}
.three{
  color: palegreen;
}

/*告警栏目*/
.alter{
  display: flex;
  flex-direction: column;
  margin-bottom: 2%;
}
.alter-content{
  font-weight: 200;
  font-size: 16px;
  color: darkslategrey;
  margin: 1% 0px 0px 3%;
}
.alter-label{
  padding: 0% 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.label{
  border: 1px solid #3385ff;
  color: #3385ff;
  border-radius: 5px;
  font-size: 14px;
  height: 16px;
  line-height: 14px;
  padding: 0px 2%;
}
.time{
  color: #c1c1c1;
  font-size: 14px;
  font-weight: 100;
}

/*底部声明*/
.state{
  width: 100%;
  display: flex;
  font-size: 12px;
  font-weight: 100;
  margin: 6% auto;
  color: #c1c1c1;
  justify-content: center;
}